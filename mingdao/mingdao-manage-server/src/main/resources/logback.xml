<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd  HH:mm:ss.SSS} [%thread] %-5level %logger{80} - %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="mingdao-debug"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/exports/log/mingdao/mingdao-debug.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>/exports/log/mingdao/mingdao-debug.%i.log
			</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>5</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>500MB</MaxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss}[%thread] %-5p]-%c %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			      
			<onMismatch>DENY</onMismatch>
			  
		</filter>
	</appender>

	<appender name="mingdao-error"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/exports/log/mingdao/mingdao-error.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>/exports/log/mingdao/mingdao-error.%i.log
			</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>5</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>500MB</MaxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss}[%thread] %-5p]-%c %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

	<appender name="mingdao-mybatis"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/exports/log/mingdao/mingdao-mybatis.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>/exports/log/mingdao/mingdao-mybatis.%i.log
			</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>5</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>500MB</MaxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss}[%thread] %-5p]-%c %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>


	<appender name="mingdao-jdbc"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/exports/log/mingdao/mingdao-error.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>/exports/log/mingdao/mingdao-jdbc.%i.log
			</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>5</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>500MB</MaxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss}[%thread] %-5p]-%c %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

	<logger name="org.apache.ibatis" additivity="false" level="ERROR">
		<appender-ref ref="mingdao-mybatis" />
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="org.apache" additivity="false" level="ERROR">
		<appender-ref ref="mingdao-error" />
	</logger>

	<logger name="jdbc.sqlonly" additivity="false" level="ERROR">
		<appender-ref ref="mingdao-jdbc" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="jdbc.audit" additivity="false" level="ERROR">
		<appender-ref ref="mingdao-jdbc" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="jdbc.resultset" additivity="false" level="ERROR">
		<appender-ref ref="mingdao-jdbc" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="jdbc.connection" additivity="false" level="ERROR">
		<appender-ref ref="mingdao-jdbc" />
		<appender-ref ref="STDOUT" />
	</logger>


	<root level="INFO">
		<appender-ref ref="mingdao-debug" />
		<appender-ref ref="mingdao-error" />
		<appender-ref ref="STDOUT" />
	</root>

</configuration>