<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingdao.dao.base.IUserInfoDao">

	<resultMap id="userResultMap" type="com.mingdao.domain.UserInfo">
		<id property="id" javaType="long" jdbcType="INTEGER" column="id" />
		<result property="userName" javaType="string" jdbcType="VARCHAR" column="username"/>
		<result property="passWord" javaType="string" jdbcType="VARCHAR" column="password"/>
		<result property="nickName" javaType="string" jdbcType="VARCHAR" column="nickname"/>
		<result property="userCode" javaType="string" jdbcType="VARCHAR" column="usercode"/>
		<result property="shopId" javaType="string" jdbcType="VARCHAR" column="shopid"/>
		<result property="status" javaType="string" jdbcType="VARCHAR" column="status"/>
		<result property="phone" javaType="string" jdbcType="VARCHAR" column="phone"/>
		<result property="email" javaType="string" jdbcType="VARCHAR" column="email"/>
		<result property="creator" javaType="string" jdbcType="VARCHAR" column="creator"/>
		<result property="modifiedTime" javaType="string" jdbcType="VARCHAR" column="modifiedtime"/>
		<result property="modifier" javaType="string" jdbcType="VARCHAR" column="modifier"/>
		<result property="createTime" javaType="string" jdbcType="VARCHAR" column="createtime"/>
	</resultMap>

	<insert id="insertVO" parameterType="com.mingdao.domain.UserInfo" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO userinfo
		(usercode,username,password,nickname,status,phone,email,creator,createtime,modifier,modifiedtime)
		VALUES
		(#{userCode},#{userName},#{passWord},#{nickName},#{status},#{phone},#{email},#{creator},#{createTime},#{modifier},#{modifiedTime})
	</insert>

	<select id="getUserInfo" parameterType="map" resultMap="userResultMap">
		select
			t.id,
			t.username,
			t.password,
			t.nickname,
			t.usercode,
			t.shopid,
			t.status,
			t.phone,
			t.email,
			t.creator,
			t.modifiedtime,
			t.modifier,
			t.createtime
		from  userinfo t where 1=1
			<if test="usercode != '' and usercode != null">
				and t.usercode=#{usercode}
			</if>
			<if test="username != '' and username != null">
				and t.username=#{username}
			</if>
	</select>

	<select id="getCountUser" parameterType="map" resultType="int">
		select
		 count(1)
		from  userinfo t where 1=1
		<if test="id != '' and id != null">
			and t.id=#{id}
		</if>
		<if test="username != '' and username != null">
			and t.username=#{username}
		</if>
	</select>
	
</mapper>