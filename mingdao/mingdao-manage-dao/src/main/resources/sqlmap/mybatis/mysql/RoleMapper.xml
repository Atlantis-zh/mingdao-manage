<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingdao.dao.base.IRoleDao">
	<resultMap id="roleResultMap" type="com.mingdao.domain.Role">
		<id property="id" javaType="long" jdbcType="INTEGER" column="id" />
		<result property="roleCode" javaType="string" jdbcType="VARCHAR" column="rolecode"/>
		<result property="roleName" javaType="string" jdbcType="VARCHAR" column="rolename"/>
		<result property="roleMemo" javaType="string" jdbcType="VARCHAR" column="rolememo"/>
		<result property="creator" javaType="string" jdbcType="VARCHAR" column="creator"/>
		<result property="createTime" javaType="string" jdbcType="VARCHAR" column="createtime"/>
		<result property="modifier" javaType="string" jdbcType="VARCHAR" column="modifier"/>
		<result property="modifiedTime" javaType="string" jdbcType="VARCHAR" column="modifiedtime"/>
	</resultMap>
	
	<insert id="insertVO" parameterType="com.mingdao.domain.Role" useGeneratedKeys="true" keyProperty="id">
	    INSERT INTO role
        (rolecode,rolename,rolememo,creator,createtime,modifier,modifiedtime)
        VALUES
        (#{roleCode},#{roleName},#{roleMemo},#{creator},#{createTime},#{modifier},#{modifiedTime})
	</insert>
	
	<update id="updateVO" parameterType="com.mingdao.domain.Role">
	    UPDATE role SET
          rolecode=#{roleCode},
          rolename=#{roleName},
          rolememo=#{roleMemo},
          creator=#{creator},
          createtime=#{createTime},
          modifier=#{modifier},
          modifiedtime=#{modifiedTime}
        WHERE id=#{id}
	</update>
	
	<select id="queryByCondition" parameterType="java.util.Map" resultMap="roleResultMap">
	    SELECT
          t.id,
          t.rolecode,
          t.rolename,
          t.rolememo,
          t.usercode,
          t.creator,
          t.createtime,
          t.modifier,
          t.modifiedtime
        FROM  perssion t where 1=1
           <if test="id != null">
              and t.id=#{id}
           </if>
           <if test="rolename != null">
              and t.rolename=#{roleName}
           </if>
           <if test="rolecode != null">
              and t.rolecode=#{roleCode}
           </if>
	</select>
		
</mapper>