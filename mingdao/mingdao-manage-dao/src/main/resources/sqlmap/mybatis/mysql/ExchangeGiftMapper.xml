<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingdao.domain.IExchangeGiftDao">
	<resultMap id="excGiftResultMap" type="com.mingdao.domain.ExchangeGift">
		<id property="id" javaType="long" jdbcType="BIGINT" column="id" />
		<result property="storeId" javaType="long" jdbcType="BIGINT" column="storeid"/>
		<result property="points" javaType="int" jdbcType="INTEGER" column="points"/>
	    <result property="name" javaType="string" jdbcType="VARCHAR" column="name"/>
		<result property="creator" javaType="long" jdbcType="BIGINT" column="creator"/>
		<result property="createTime" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP" column="createtime"/>
		<result property="modifier" javaType="long" jdbcType="BIGINT" column="modifier"/>
		<result property="modifiedTime" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP" column="modifiedtime"/>
	</resultMap>

	<insert id="insertVO" parameterType="com.mingdao.domain.ExchangeGift" useGeneratedKeys="true" keyProperty="id">
	    INSERT INTO exchange_gift
        (storeid,points,name,creator,createtime,modifier,modifiedtime)
        VALUES
        (#{storeId},#{points},#{name},#{creator},#{createTime},#{modifier},#{modifiedTime})
	</insert>

	<update id="updateVO" parameterType="com.mingdao.domain.ExchangeGift">
	    UPDATE exchange_gift SET
          storeid=#{storeId},
          points=#{points},
          name=#{name},
          creator=#{creator},
          createtime=#{createTime},
          modifier=#{modifier},
          modifiedtime=#{modifiedTime}
        WHERE id=#{id}
	</update>

	<select id="pageQueryByCondition" parameterType="java.util.Map" resultMap="excGiftResultMap">
	    SELECT
          t.id,
          t.storeid,
          t.points,
          t.name,
          t.creator,
          t.createtime,
          t.modifier,
          t.modifiedtime
        FROM  exchange_gift t where 1=1
           <if test="id != null">
              and t.id=#{id}
           </if>
           <if test="storeid != null">
              and t.storeid=#{storeId}
           </if>
           <if test="name != null">
              and t.name=#{name}
           </if>
	</select>
	
	<select id="getCountByCondition" parameterType="java.util.Map" resultType="int">
		select
		   count(1)
		from exchange_gift t where 1=1
           <if test="id != null">
              and t.id=#{id}
           </if>
           <if test="storeid != null">
              and t.storeid=#{storeId}
           </if>
           <if test="name != null">
              and t.name=#{name}
           </if>
	</select>
</mapper>